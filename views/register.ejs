<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw] px-5 bg-white py-10 rounded-[30px]">
    <h1
      class="text-3xl text-center leading-none font-semibold txt-zinc-700 tracking-tighter"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="email"
        name="email"
        placeholder="email"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="number"
        name="contact"
        placeholder="Contact"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <input
        class="border-2 block mt-7 w-full px-3 bg-red-600 text-white rounded-full py-2"
        type="Submit"
        value="Create New Account"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge you've read our Privacy Policy; Opens a new tab.
        Notice at collection; Opens a new tab.
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/"
      >Login to Existing Account<br />
      Login
    </a>
  </div>
</div>
<% include ./partials/footer.ejs %>
