<% include ./partials/header.ejs %>
<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1604076913837-52ab5629fba9?q=80&w=2731&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center"
>
  <div class="w-[25vw] px-5 bg-white py-10 rounded-[30px]">
    <div class="flex items-center justify-center">
      <img
        src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
        alt="pin logo"
        class="img1 w-20 h-20"
      />
    </div>
    <h1
      class="text-3xl mb-10 text-center leading-none font-semibold txt-zinc-700 tracking-tighter"
    >
      Welcome to Pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#"
        >Forgot password?</a
      >
      <input
        class="border-2 block mt-2 w-full px-3 bg-red-600 text-white rounded-full py-2"
        type="Submit"
        value="Login"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge you've read our Privacy Policy; Opens a new tab.
        Notice at collection; Opens a new tab.
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/register"
      >Don't have an account?<br />
      Register here
    </a>
  </div>
</div>
